<Window x:Class="BeadandoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeadandoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="615" Width="540"
        WindowStyle = "None"
        ResizeMode="NoResize"
        Background="#183745">
    <Canvas Name="Game" Focusable="True" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="Player" Height="24" Width="24" Fill="Beige" RenderTransformOrigin="0,0" Canvas.Left="256" Canvas.Top="581"/>
        <Label Name="scoreText" Content="Score: 0" FontSize="18" FontFamily="Fonts/#Dosis" Foreground="White" FontWeight="Bold"/>
        <Label Name="healthText" Content="Damage: 0" FontSize="18" FontFamily="Fonts/#Dosis" Foreground="White" FontWeight="Bold" Canvas.Left="430"/>
    </Canvas>
</Window>
